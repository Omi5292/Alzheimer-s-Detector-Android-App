<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE2FA"
    tools:context=".Instructions">

    <TextView
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="Instructions"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please perform the test in a quiet and trouble-free environment."
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="casual" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow about 15 minutes to take the test, in which you are unlikely to be distracted."
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="casual" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A close guide/relative if present closely then he/she should not prompt answers during the test."
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="casual" />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:fontFamily="sans-serif-black"
        android:onClick="home"
        android:textAllCaps="false"
        android:text="Yes, got it!"
        android:textSize="20dp"
        android:textStyle="bold"/>
</RelativeLayout>